{
  "compilerOptions": {
    // --- Core Options for JS -> .d.ts generation ---
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    // --- Output & Module Settings ---
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2015",
    "jsx": "react",

    // --- Strictness & Interop ---
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // --- Additional helpful options ---
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "DOM"]
  },
  // Define which files to include in the process.
  "include": ["index.js", "src/**/*"],
  // Exclude test files, storybooks, etc.
  "exclude": ["node_modules", "dist", "**/*.test.js", "**/*.test.jsx", "**/*.spec.js"]
}